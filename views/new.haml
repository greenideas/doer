%html
  %head
    %title Sinatra
  %body
    %h1 Create a new task
    %form{:action => 'create', :method => 'post'}
      - unless !@errors
        %ul
        - @errors.each do |error|
          %li= error
      %label{:for => 'name'} Task:
      %input{:type => 'text', :name => 'name'}
      %label{:for => 'name'} Description:
      %textarea{:type => 'text', :name => 'description'}
      %input{:type => 'submit', :value => 'Submit'}